#include <stdio.h>
void main()
 {
   int i, n, x, j; 
   float x1, S, cosx,fact,sign;
   printf("Enter the number of terms \n");
   scanf("%d",&n); 
   printf(Enter the value of x in degree \n");
   scanf("%f",&x1); 
   x=x1;
   x1=x1*(3.142/180);
   cosx1=1;
   s=-1;
   for(i=2;i<=n; i+=2)
     {
       fact=1;
        for(j=1;j<=i; j++)
         {
           fact*=j; 
          }
       cosx1=cosx1+(pow(x1,i)/fact) *sign; 
       sign=sign*-1;
     }
     printf("The sum of cosine series =%f",cosx1);
   }
